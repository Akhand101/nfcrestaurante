<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayoutBienvenida"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="33dp" >

    <ListView
        android:id="@+id/listViewCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="53dp"
        android:layout_marginTop="15dp"
        android:divider="#000000" >

    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@drawable/bordes_redondeados_lista_categorias_extra"
        android:gravity="bottom|right" >

        <ImageView
            android:id="@+id/imageViewMonedas"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/total" />

        <TextView
            android:id="@+id/textViewTotalCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom|right"
            android:text="sdsd"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </LinearLayout>

</FrameLayout>