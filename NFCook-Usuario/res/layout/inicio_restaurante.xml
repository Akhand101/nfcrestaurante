<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayoutBienvenida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:background="#ffdd8d" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewBienvenidaRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Bienvenido"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageViewLogoRestaurantePantallaInicial"
            android:layout_width="241dp"
            android:layout_height="241dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_foster_inicio" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp" >

            <ImageView
                android:id="@+id/imageViewMapas"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginRight="110dp"
                android:src="@drawable/mapas1" />

            <ImageView
                android:id="@+id/imageViewPromociones"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:src="@drawable/promo1" />

            <ImageView
                android:id="@+id/imageViewAyudaPantallaInicial"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ayuda1" />

        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewInformacionAyuda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/informacion_ayuda"
        android:visibility="invisible" />

</FrameLayout>