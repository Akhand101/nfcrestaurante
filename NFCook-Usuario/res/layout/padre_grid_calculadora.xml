<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="180dp"
    android:background="@drawable/bordes_redondeados_usuarios_calculadora"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageViewPersonaCalculadora"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/persona" />

        <ImageView
            android:id="@+id/imageViewEliminarPersonaCalculadora"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icono_eliminar" />

        <EditText
            android:id="@+id/editTextNombrePersonaCalculadora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:textColor="@color/blanco"
            android:textSize="15sp" 
            android:inputType="text"
            android:imeOptions="actionDone"/>       

    </FrameLayout>

    <ListView
        android:id="@+id/listViewPlatosPersona"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:background="#eeeeee" >

    </ListView>

    <TextView
        android:id="@+id/textViewTotalPagarPersonaCalculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:text="25.8 E"
        android:textColor="@color/blanco" />

</LinearLayout>