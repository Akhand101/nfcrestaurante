<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewNombreBebida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:maxWidth="100dp"
        android:text="dfsdf"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewBebida"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:src="@drawable/cocacola" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textViewUnidadesBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Uds: 3"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewPrecioBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="15.0 E"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageViewEliminarBebida"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconomenos" />

        <ImageView
            android:id="@+id/imageViewAnyadirBebida"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconomas" />

    </LinearLayout>

</LinearLayout>