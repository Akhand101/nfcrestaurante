	<color name="naranja2">#DC7712</color>
	<color name="naranja3">#FFC284</color>
	<color name="naranja4">#FFD8B0</color>
	 
	<color name="azul2">#3F7CEE</color>
	<color name="azul3">#AED5FF</color>
	<color name="azul4">#90C6FF</color>
	
