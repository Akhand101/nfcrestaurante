<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayoutBienvenida"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BFE4F2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Cuenta"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textSize="30sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="135dp"
        android:layout_marginTop="60dp"
        android:divider="#000000" >

    </ListView>

    <ImageView
        android:id="@+id/imageViewMonedas"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="75dp"
        android:src="@drawable/total" />

    <TextView
        android:id="@+id/textViewTotalCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="10dp"
        android:textSize="16dp" />

</FrameLayout>