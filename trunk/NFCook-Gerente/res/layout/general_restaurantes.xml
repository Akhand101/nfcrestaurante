<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayoutGeneralRestaurantes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/todosLosRestaurantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:contentDescription="TODO"
            android:src="@drawable/boton_grafica_general" />

        <ListView
            android:id="@+id/listViewRestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:background="@color/verde5"
            android:divider="@color/verde5"
            android:dividerHeight="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBotones"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom" >

        <ImageView
            android:id="@+id/buttonAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.33"
            android:src="@drawable/validar"
            android:visibility="invisible" />

        <Button
            android:id="@+id/botonComparar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_comparar" />

        <ImageView
            android:id="@+id/buttonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.33"
            android:src="@drawable/cancelar"
            android:visibility="invisible" />

    </LinearLayout>

</FrameLayout>
