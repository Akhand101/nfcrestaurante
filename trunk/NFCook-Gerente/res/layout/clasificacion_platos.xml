<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/verde5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonFacturacion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_facturacion2"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonDemanda"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_demanda"
            android:visibility="visible" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayoutUp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/verde5" >

        <TableRow
            android:id="@+id/tableRowHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/posicion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:background="@color/head_style"
                android:gravity="center"
                android:padding="5dp"
                android:text="#"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blanco"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.58"
                android:background="@color/head_style"
                android:gravity="center"
                android:padding="5dp"
                android:text="Nombre"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blanco"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fotoPlato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@color/head_style"
                android:gravity="center"
                android:padding="5dp"
                android:text="Foto"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blanco"
                android:textStyle="bold" />
        </TableRow>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/verde5" >

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde5" >
            </TableLayout>
        </ScrollView>
    </TableLayout>

</LinearLayout>