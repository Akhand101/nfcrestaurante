<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewTituloAnadirPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AÃ±adir plato" 
            android:background="#BFE4F2"
            android:textSize="30sp" 
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewBuscadorPlatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/buscarplato"
                android:ems="15"
                android:hint="Buscar"
                android:textSize="12dp" >

                <requestFocus />
            </AutoCompleteTextView>

        </FrameLayout>

        <ExpandableListView
            android:id="@+id/expandableListPlatos"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:transcriptMode="alwaysScroll" >

        </ExpandableListView>

    </LinearLayout>

</FrameLayout>