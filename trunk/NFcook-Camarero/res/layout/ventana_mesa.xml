<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editCuenta"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/numMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/cuenta"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewCuenta"
        android:layout_marginTop="25dp" >
	</TableLayout>
	
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal" >

    	<TextView
    	    android:id="@+id/precioTodo"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="0.07"
    	    android:gravity="right"
    	    android:text="Total Precio:"
    	    android:textAppearance="?android:attr/textAppearanceMedium"
    	    android:textSize="15dp" />

    	<TextView
    	    android:id="@+id/valorPrecio"
    	    android:layout_width="92dp"
    	    android:layout_height="wrap_content"
    	    android:gravity="right"
    	    android:text="El precio total que sea"
    	    android:textAppearance="?android:attr/textAppearanceMedium"
    	    android:textSize="15dp" />
	</LinearLayout>
    	
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <!-- >android:gravity="bottom" -->

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Cobrar" />

        <Button
            android:id="@+id/button2"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Añadir Bebida" />

        <Button
            android:id="@+id/button3"
            android:layout_width="62dp"
            android:layout_height="65dp"
            android:layout_weight="0.04"
            android:textSize="14dp"
            android:text="Añadir Plato" />

        <Button
            android:id="@+id/button4"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:textSize="14dp"
            android:text="Eliminar" />
    </LinearLayout>
    
</LinearLayout>

