<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onAniadirClick"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/gridViewInicial"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:horizontalSpacing="15dp"
        android:numColumns="3"
        android:paddingBottom="20dp"
        android:verticalSpacing="15dp" >

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:onClick="onAniadirClick"
            android:orientation="vertical" >

            <Button
                android:id="@+id/aniadirMesa"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@drawable/anadir_mesa_icono"
                android:clickable="false"
                android:longClickable="true"
                android:onClick="onAniadirClick" />

            <TextView
                android:id="@+id/textViewAnadirMesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onAniadirClick"
                android:text="AÃ±adir Mesa" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="onClickEliminarMesa"
            android:orientation="vertical" >

            <Button
                android:id="@+id/eliminarMesa"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@drawable/eliminar_mesa_icono"
                android:onClick="onClickEliminarMesa" />

            <TextView
                android:id="@+id/textViewQuitarMesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickEliminarMesa"
                android:text="Quitar Mesa" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>